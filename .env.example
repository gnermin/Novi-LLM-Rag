# Database
DATABASE_URL=postgresql://user:password@localhost/multi_rag

# Security
SESSION_SECRET=your-secret-key-change-in-production

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Embeddings Configuration
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_DIM=1536

# OCR and Pipeline
OCR_ENABLED=true
PIPELINE_MODE=full

# External Database (for SQL Ingestion)
EXTERNAL_DB_URL=postgresql://user:password@remote_host/db
SQL_INGEST_QUERY=SELECT * FROM public.sample LIMIT 100
SQL_INGEST_BATCH_SIZE=500

# Upload Settings
UPLOAD_MAX_SIZE=52428800
UPLOAD_DIR=uploads
